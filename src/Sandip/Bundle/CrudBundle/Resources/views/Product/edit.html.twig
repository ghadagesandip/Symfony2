{% extends '::base.html.twig' %}

{% block title %} Edit product {% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-2">
            <a class="btn btn-primary" href="{{ path('product') }}">
                Back to the list
            </a>
            {{ form(delete_form) }}
        </div>

        <div class="col-lg-10">
            {{ form_start(edit_form,{'attr':{'novalidate':'novalidate'}}) }}

            <div class="form-group">
                {{ form_label(edit_form.name,'Product name : ') }}
                {{ form_widget(edit_form.name,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(edit_form.name) }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.price,'Product name : ') }}
                {{ form_widget(edit_form.price,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(edit_form.price) }}
            </div>


            <div class="form-group">
                {{ form_label(edit_form.description,'Product name : ') }}
                {{ form_widget(edit_form.description,{'attr':{'class':'form-control'}}) }}
                {{ form_errors(edit_form.description) }}
            </div>

            <div class="form-group">
                {{ form_widget(edit_form.submit,{'attr':{'class':'btn btn-success'}}) }}
            </div>

            {{ form_end(edit_form) }}
        </div>
    </div>





{% endblock %}
